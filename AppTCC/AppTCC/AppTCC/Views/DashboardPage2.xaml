<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTCC.Views.DashboardPage2"
             xmlns:vm="clr-namespace:AppTCC.ViewModels"
             Shell.NavBarIsVisible="True"
             Title="{Binding Title}">
    
    <!--
    <ContentPage.BindingContext>
        <vm:DashboardViewModel />
    </ContentPage.BindingContext>
    -->
    
    <StackLayout BackgroundColor="#000000">
        <Frame BackgroundColor="#000000">
            <ContentView VerticalOptions="FillAndExpand">
                <Image Source="logofinv.png" VerticalOptions="FillAndExpand" />
            </ContentView>
        </Frame>
        <Grid VerticalOptions="Start" Padding="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50%"/>
                <ColumnDefinition Width="50%"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="" FontSize="20" BackgroundColor="Yellow" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Graphics_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Image Grid.Row="0" Grid.Column="0" Source="grafico.png" Margin="10" />
            <Label Grid.Row="0" Grid.Column="1" Text="" FontSize="20" BackgroundColor="Orange" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Projections_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Image Grid.Row="0" Grid.Column="1" Source="analytics.png" Margin="10" />
            <Label Grid.Row="1" Grid.Column="0" Text="" FontSize="20" BackgroundColor="Orange" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Monitors_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Image Grid.Row="1" Grid.Column="0" Source="monitor.png" Margin="10" />
            <Label Grid.Row="1" Grid.Column="1" Text="" FontSize="20" BackgroundColor="Yellow" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Parameters_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Image Grid.Row="1" Grid.Column="1" Source="parametros.png" Margin="10" />
        </Grid>
    </StackLayout>

</ContentPage>
